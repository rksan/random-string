{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "files": [
        "./src/index.ts",
        "./src/randomString.ts",
        "./test/randomString.spec.ts"
    ],
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./.eslintrc."
    ]
}
